@model MarcusBilOchBluffAB.Models.BookingViewModel

<h1>Delete Booking</h1>

<div>
    <p>Are you sure you want to delete this booking?</p>
    <dl class="dl-horizontal">
        <dt>Car</dt>
        <dd>@Model.CarId</dd>

        <dt>Customer</dt>
        <dd>@Model.CustomerId</dd>

        <dt>Start Date</dt>
        <dd>@Model.StartDate.ToString("yyyy-MM-dd")</dd>

        <dt>End Date</dt>
        <dd>@Model.EndDate.ToString("yyyy-MM-dd")</dd>
    </dl>

    <form asp-action="DeleteBooking" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("ManageBookings", "Admin")" class="btn btn-secondary">Cancel</a>
    </form>
</div>
<div>
    <a asp-action="ManageBookings" asp-controller="Admin">Back to List</a>
</div>

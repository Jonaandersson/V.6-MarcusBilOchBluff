@model MarcusBilOchBluffAB.Models.BookingViewModel

<h1>Create Booking</h1>

<form asp-action="CreateBooking" asp-controller="Booking" method="post">
    <div class="form-group">
        <label for="CarId">Car</label>
        <select asp-for="CarId" class="form-control" asp-items="@(new SelectList(Model.Cars, "Id", "Model"))">
            <option value="">Select a car</option>
        </select>
    </div>

    <div class="form-group">
        <label for="CustomerId">Customer</label>
        <select asp-for="CustomerId" class="form-control" asp-items="@(new SelectList(Model.Customers, "Id", "Email"))">
            <option value="">Select a customer</option>
        </select>
    </div>

    <div class="form-group">
        <label for="StartDate">Start Date</label>
        <input asp-for="StartDate" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label for="EndDate">End Date</label>
        <input asp-for="EndDate" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label for="IsConfirmed">Is Confirmed</label>
        <input asp-for="IsConfirmed" type="checkbox" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Create Booking</button>
</form>
<div>
    <a asp-action="ManageBookings" asp-controller="Admin">Back to List</a>
</div>
